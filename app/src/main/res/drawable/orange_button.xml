<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#FAAF3F"
                android:endColor="#FFCF55"
                android:angle="270"
                />
            <corners  android:radius="4px"/>
        </shape>
    </item>
    <item android:top="-10dp" android:left="-10dp" android:right="-10dp">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#FAAF3F" />
            <corners  android:radius="4px"/>
        </shape>
    </item>
</layer-list>